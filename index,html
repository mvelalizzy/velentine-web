    <script>
        // Page Navigation Functions
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            // Show selected page
            document.getElementById(pageId).classList.add('active');
        }

        function showProposalPage() {
            showPage('proposal-page');
        }

        function showSurePage() {
            showPage('sure-page');
        }

        function showSadPage() {
            showPage('sad-page');
            createRain();
        }

        function showHappyPage() {
            showPage('happy-page');
            createHearts('hearts-container');
        }

        function showGiftPage() {
            showPage('gift-page');
        }

        // Rain Animation for Sad Page
        function createRain() {
            const container = document.getElementById('rain-container');
            container.innerHTML = '';
            const tearEmojis = ['ğŸ’§', 'ğŸ’¦', 'ğŸ˜¢', 'ğŸŒ§ï¸'];
            
            for (let i = 0; i < 50; i++) {
                const tear = document.createElement('div');
                tear.className = 'tear';
                tear.textContent = tearEmojis[Math.floor(Math.random() * tearEmojis.length)];
                tear.style.left = Math.random() * 100 + 'vw';
                tear.style.animationDuration = (Math.random() * 3 + 2) + 's';
                tear.style.animationDelay = Math.random() * 2 + 's';
                container.appendChild(tear);
            }
        }

        // Hearts Animation for Happy Page
        function createHearts(containerId) {
            const container = document.getElementById(containerId);
            container.innerHTML = '';
            const heartEmojis = ['â¤ï¸', 'ğŸ’•', 'ğŸ’–', 'ğŸ’—', 'ğŸ’˜', 'ğŸ’', 'ğŸ’'];
            
            for (let i = 0; i < 40; i++) {
                const heart = document.createElement('div');
                heart.className = 'heart';
                heart.textContent = heartEmojis[Math.floor(Math.random() * heartEmojis.length)];
                heart.style.left = Math.random() * 100 + 'vw';
                heart.style.animationDuration = (Math.random() * 4 + 3) + 's';
                heart.style.animationDelay = Math.random() * 3 + 's';
                heart.style.fontSize = (Math.random() * 2 + 1) + 'rem';
                container.appendChild(heart);
            }
        }

        // Gift Selection
        function selectGift(giftType) {
            const confirmEmoji = document.getElementById('confirm-emoji');
            const gifts = {
                'movie': { emoji: 'ğŸ¬ğŸ¿', name: 'Movie Date' },
                'beach': { emoji: 'ğŸ–ï¸ğŸŒŠ', name: 'Beach Date' },
                'money': { emoji: 'ğŸ’¸ğŸ¤—', name: 'Money & Cuddling' }
            };
            
            confirmEmoji.textContent = gifts[giftType].emoji;
            showPage('confirmation-page');
            createHearts('confirm-hearts');
        }
